<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.seanlindev.springframework.shippingserviceapi.repositories.UserRepository">
    <select id="findById" parameterType="java.lang.Integer" resultType="User">
        select * from users where id = #{id}
    </select>

    <resultMap id="userMap" type="User">
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="encryptedPassword" column="encrypted_password"/>
    </resultMap>
    <select id="findByUserId" parameterType="java.lang.String" resultMap="userMap">
        select * from users where user_id = #{id}
    </select>

    <select id="findByEmail" parameterType="java.lang.String" resultMap="userMap">
        select * from users where email = #{email}
    </select>

    <insert id="save" parameterType="User">
        insert into users (user_id, name, email, encrypted_password) values (#{userId}, #{name}, #{email}, #{encryptedPassword})
    </insert>
</mapper>